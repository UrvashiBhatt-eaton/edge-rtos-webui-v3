{
  "name": "acceptance-tests-webui-2",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "serenity-bdd update --ignoreSSL && webdriver-manager update --gecko=false",
    "clean:chrome": "rimraf test_reports_chrome",
    "clean:firefox": "rimraf test_reports_firefox",
    "clean:edge": "rimraf test_reports_edge",
    "test:firefox": "failsafe clean:firefox config:firefox test:report:firefox",
    "test:edge": "npm-run-all -p webdriver:edge execute:edge",
    "test:chrome": "npm-run-all -p -r webdriver:chrome execute:chrome",
    "webdriver:chrome": "webdriver-manager start --chrome --chromedriver_version=LATEST",
    "webdriver:edge": "webdriver-manager start --edge node_modules/msedgedriver/lib/msedgedriver/msedgedriver.exe",
    "execute:edge": "failsafe clean:edge config:edge test:report:edge",
    "execute:chrome": "failsafe clean:chrome config:chrome test:report:chrome",
    "config:chrome": "protractor ./protractor.conf.js --params.browser=chrome",
    "config:firefox": "protractor ./protractor.conf.js --params.browser=firefox",
    "config:edge": "protractor ./protractor.conf.js --params.browser=edge",
    "test:execute:wip": "protractor ./protractor.conf.js --cucumberOpts.tags=@wip",
    "test:report:chrome": "serenity-bdd run --features ./features --source ./test_reports_chrome --destination ./test_reports_chrome && node ./xml.report.generator.js",
    "test:report:firefox": "serenity-bdd run --features ./features --source ./test_reports_firefox --destination ./test_reports_firefox",
    "test:report:edge": "serenity-bdd run --features ./features --source ./test_reports_edge --destination ./test_reports_edge",
    "wip": "failsafe clean test:execute:wip test:report",
    "lint": "tslint --project tsconfig.json --format stylish"
  },
  "keywords": [
    "serenity-js",
    "bdd",
    "cucumber",
    "protractor",
    "testing"
  ],
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 10",
    "npm": ">= 6"
  },
  "devDependencies": {
    "@serenity-js/assertions": "^2.32.7",
    "@serenity-js/console-reporter": "^2.32.7",
    "@serenity-js/core": "^2.32.7",
    "@serenity-js/cucumber": "^2.32.7",
    "@serenity-js/protractor": "^2.32.7",
    "@serenity-js/serenity-bdd": "^2.32.7",
    "@types/node": "^16.11.20",
    "cucumber": "^6.0.5",
    "cucumber-junit-convert": "2.0.0",
    "is-ci": "^3.0.1",
    "npm-failsafe": "^0.4.3",
    "npm-run-all": "^4.1.5",
    "protractor": "^7.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^4.4.4",
    "webdriver-manager": "^12.1.7"
  }
}
